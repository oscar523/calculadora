<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    android:orientation="vertical"
    tools:context=".actv_Calculadora">
    <TextView
        android:id="@+id/txt_visor_calculadora"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="23pt"
        android:textAlignment="textEnd"
        android:hint="Visor">
    </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <Button
                android:id="@+id/btlimpar"
                style="@style/botao"
                android:text="C"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>

            <Button
                android:id="@+id/btinverter"
                android:text="+/-"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/btpercentagem"
                android:text="%"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>

            <Button
                android:id="@+id/btdividir"
                android:text="/"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>

        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/bt7"
                android:text="7"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt8"
                android:text="8"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt9"
                android:text="9"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>

            <Button
                android:id="@+id/btmultiplicar"
                android:text="*"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt4"
                android:text="4"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt5"
                android:text="5"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt6"
                android:text="6"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/btmenos"
                android:text="-"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt1"
                android:text="1"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt2"
                android:text="2"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/bt3"
                android:text="3"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
            <Button
                android:id="@+id/btmais"
                android:text="+"
                style="@style/botao"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/botao"
                android:layout_margin="5dp"
                android:text="0"></Button>

            <Button
                android:id="@+id/btponto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/botao"
                android:layout_margin="5dp"
                android:text="."></Button>

            <Button
                android:id="@+id/btigual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/botao"
                android:layout_margin="5dp"
                android:text="="></Button>
        </TableRow>

    </TableLayout>

</LinearLayout>